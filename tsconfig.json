{
  "compilerOptions": {
    "strict": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "checkJs": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "ES6",
      "DOM"
    ],
    "target": "es2016",
    "module": "commonjs",
    "sourceMap": true,
    "paths": {
      "*": [
        "./src/js/@types/*"
      ]
    }
  },
  "include": [
    "./src/js/**/*",
	".eslintrc.js"
  ],
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
}
