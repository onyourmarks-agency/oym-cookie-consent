{
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules"
  ],
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./lib/types",
    "strict": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "checkJs": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "ES6",
      "DOM"
    ],
    "target": "es2016",
    "module": "commonjs",
    "sourceMap": true,
    "paths": {
      "*": [
        "./src/js/@types/*"
      ]
    }
  }
}
